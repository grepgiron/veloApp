            <li class="nav-item">
              <a class="nav-link" href="/packages">Paquetes</a>
            </li>
          </ul>
      </nav>
      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <%= yield %>
      </div>
    </div>
  </div>
  </body>
</html>
